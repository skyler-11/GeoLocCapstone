<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/android_default_with_bottom"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|top">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="450px"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginRight="2sp"
            android:src="@drawable/logo_welcome" />

        <EditText
            android:id="@+id/editTextEmail"
            android:background="@drawable/rounded_edittext_main"
            android:elevation="10dp"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:padding="10dp"
            android:textColor="#222563"
            android:hint="Email"
            android:textColorHint="#A9AFB1"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:background="@drawable/rounded_edittext_main"
            android:elevation="10dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:padding="10dp"
            android:textColor="#222563"
            android:hint="Password"
            android:textColorHint="#A9AFB1" />

        <TextView
            android:id="@+id/fpassw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_marginRight="10sp"
            android:text="Forgot password?"
            android:textColor="#222563"
            android:textAlignment="textEnd"/>

        <Button
            android:id="@+id/buttonLogin"
            android:background="@drawable/rounded_button_main"
            android:fontFamily="@font/mazzardh_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:text="Login"
            android:textSize="18dp"
            android:textAllCaps="false"/>

        <ImageButton
            android:id="@+id/buttonFBLogin"
            android:elevation="10dp"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_width="260dip"
            android:layout_height="39dip"
            android:background="@drawable/login_facebook" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_width="270dip"
            android:layout_height="43dip" />
    </LinearLayout>

</LinearLayout>