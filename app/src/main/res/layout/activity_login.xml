<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1e2833"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center|top">

        <TextView
            android:layout_width="302dp"
            android:layout_height="229dp"
            android:layout_gravity="left"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/mazzardh_bold"
            android:paddingLeft="20dp"
            android:text="Security Service Unit"
            android:textColor="@color/colorWhite"
            android:textSize="70dp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:background="@drawable/rounded_edittext_main"
            android:elevation="10dp"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:padding="10dp"
            android:textColor="#222563"
            android:hint="Email"
            android:textColorHint="#A9AFB1"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:background="@drawable/rounded_edittext_main"
            android:elevation="10dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="5sp"
            android:padding="10dp"
            android:textColor="#222563"
            android:hint="Password"
            android:textColorHint="#A9AFB1" />

        <TextView
            android:id="@+id/fpassw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_marginRight="10sp"
            android:text="Forgot password?"
            android:textColor="@color/colorWhite"
            android:textAlignment="textEnd"/>

        <Button
            android:id="@+id/buttonLogin"
            android:background="@drawable/rounded_button_main"
            android:fontFamily="@font/mazzardh_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:text="Login"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>